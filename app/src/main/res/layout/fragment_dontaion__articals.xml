<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.fragment.Artical_dontaion.Dontaion_ArticalsFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/ss"
        android:layout_marginTop="@dimen/x"
        android:background="@drawable/rectangler"
        android:orientation="horizontal"
        tools:ignore="RtlCompat">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
           />

        <EditText
            android:id="@+id/bloodbank_dontaion_artical_ed_"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />

<ImageView
    android:id="@+id/bloodbank_dontaion_artical_search_image"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:padding="@dimen/m"
    android:background="@drawable/circle_white"
    android:src="@drawable/search">

</ImageView>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/Favorit_recycler_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_marginTop="@dimen/m">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>