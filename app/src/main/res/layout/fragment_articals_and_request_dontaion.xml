<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.fragment.Artical_dontaion.ArticalsAndRequestDontaionFragment">


    <android.support.design.widget.TabLayout
        android:id="@+id/dontaion_Tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/dontaion_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dontaion_Tab"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bloodbank_content_navigation_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x"
        android:layout_marginBottom="@dimen/x"
        android:src="@drawable/ic_add_black_24dp"
        app:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>